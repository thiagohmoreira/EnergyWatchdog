<project name="EnergyWatchdog" default="deploy" basedir=".">
  <!-- set global properties for this build -->
  <loadproperties srcFile="conf/deploy.properties"/>

  <target name="deploy">
    <delete dir="${deploy.opencomputers}/EnergyWatchdog" verbose="${deploy.verbose}" />
    <copy todir="${deploy.opencomputers}/EnergyWatchdog" overwrite="true" includeEmptyDirs="true" verbose="${deploy.verbose}">
        <fileset dir="../opencomputer" />
    </copy>

    <copy todir="${deploy.httpd}" overwrite="true" includeEmptyDirs="true" verbose="${deploy.verbose}">
        <fileset dir="../www" />
    </copy>
  </target>
</project>
